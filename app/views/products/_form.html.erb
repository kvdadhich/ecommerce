<div class="panel panel-default">
  <div class="panel-heading">
    <h2>Add Product</h2>
  </div>
  <div class="panel-body">
    <%= form_for @product,  html: { multipart: true }  do |f| %>
      <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>


      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.fields_for @product_category do |g| %>
          <%= g.label :category_id, "Category", :class=>'control-label' %>
          <%= g.select :category_id,  @categories,  { :selected => @cat_select}, {:class => 'form-control', :multiple => "multiple" } %>
          <% end %>
         
          
      </div>
      <div class="form-group">
        <%= f.check_box :f_product %>
        <%= f.label :f_product, "Featured Product" %>
      </div>

      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>




